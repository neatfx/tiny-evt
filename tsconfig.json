{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": false,
  },
  "include": [
    "./main/**/*.ts",
    "./renderer/**/*",
    "./renderer/**/*.vue",
    "./renderer/typings.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}